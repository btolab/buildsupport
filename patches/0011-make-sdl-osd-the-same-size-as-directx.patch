---
 src/osd/modules/render/drawogl.c | 4 ----
 src/osd/modules/render/drawsdl.c | 2 +-
 2 files changed, 1 insertion(+), 5 deletions(-)

diff --git a/src/osd/modules/render/drawogl.c b/src/osd/modules/render/drawogl.c
index 5a139c4..9736c32 100644
--- a/src/osd/modules/render/drawogl.c
+++ b/src/osd/modules/render/drawogl.c
@@ -543,11 +543,7 @@ public:
 	/* virtual */ void destroy();
 	/* virtual */ render_primitive_list *get_primitives()
 	{
-#ifdef OSD_WINDOWS
 		osd_dim nd = window().get_size();
-#else
-		osd_dim nd = window().blit_surface_size();
-#endif
 		if (nd != m_blit_dim)
 		{
 			m_blit_dim = nd;
diff --git a/src/osd/modules/render/drawsdl.c b/src/osd/modules/render/drawsdl.c
index afd2057..ed935b1 100644
--- a/src/osd/modules/render/drawsdl.c
+++ b/src/osd/modules/render/drawsdl.c
@@ -75,7 +75,7 @@ public:
 	/* virtual */ void destroy();
 	/* virtual */ render_primitive_list *get_primitives()
 	{
-		osd_dim nd = window().blit_surface_size();
+		osd_dim nd = window().get_size();
 		if (nd != m_blit_dim)
 		{
 			m_blit_dim = nd;
